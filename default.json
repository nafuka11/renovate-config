{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base",
    ":noUnscheduledUpdates",
    ":timezone(Asia/Tokyo)",
    "schedule:monthly"
  ],
  "rangeStrategy": "bump",
  "stabilityDays": 7,
  "packageRules": [
    {
      "matchPackagePatterns": ["^date-fns"],
      "groupName": "date-fns packages"
    }
  ]
}
